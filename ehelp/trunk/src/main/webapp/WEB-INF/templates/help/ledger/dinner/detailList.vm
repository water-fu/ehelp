#set($layout = "/sk/ledger/purchase/layout.vm")

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>举办者名称</th>
        <th>就餐人数</th>
        <th>联系电话</th>
        <th>举办事宜</th>
        <th>举办时间</th>
        <th>索票索证</th>
    </tr>
    </thead>
    <tbody>
        #foreach($row in $pageInfo.list)
            <tr>
                <td>$!{row.dinnerName}</td>
                <td>$!{row.dinnerNum}</td>
                <td>$!{row.phone}</td>
                <td>$!{row.matters}</td>
                <td>$!{row.dinnerTime}</td>
                <td>
                    <a href="javascript:void(0);" class="btn_detailList" src="$!{CONTEXT_PATH}/ledgerDinner/ticket?pid=$!{row.dinnerId}&from=d">票证</a>
                </td>
            <tr>
        #end
    </tbody>
</table>
#pagination()

<script type="text/javascript">
    $(function() {
       $('.btn_detailList').click(function() {

           var paginationDiv = $('#searchForm').parents('.paginationDiv');
           var pageBar = paginationDiv.find('.pagerBar');
           var oldCondition = convertToObject(pageBar.attr('oldCondition'));

           sessionStorage.setItem('d_s_number', $(this).parents('#queryResultList').find('.p_number').val());

           location.href = $(this).attr('src') + '#ledger-additif';
       });
    });
</script>
